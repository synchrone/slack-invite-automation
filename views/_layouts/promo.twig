<div class="flex flex-wrap justify-center mb-5">
    <div class="w-full overflow-hidden xl:w-9/12 bg-white rounded-lg rounded-bl-none rounded-t-none rounded-br-none rounded-tr-none bg-white">
        <div class="px-2 mb-4 text-left">
            <h3 class="pt-4 mb-2 text-2xl text-center">Channels</h3>
            <p class="px-4 text-sm text-gray-700">Join the channels where community discusses most interesting topics and news of the year.</p>
        </div>

        <div class="flex flex-wrap justify-center">
            {% for channel in channels %}
            <div class="rounded overflow-hidden shadow-lg xl:w-3/12">
                <p class="px-6 text-gray-700 font-semibold text-2xl">{{ channel.channel }}</p>
                <div class="px-6 py-4">
                    <p class="text-gray-700 text-base">
                        {{ channel.description }}
                    </p>
                </div>
            </div>
            {%  endfor %}
        </div>
    </div>
    <div class="w-full overflow-hidden xl:w-3/12 bg-white rounded-lg rounded-t-none rounded-bl-none rounded-tr-none rounded-br-none bg-white" style="background-image: url('/images/channels_2.png'); background-position: center; background-size: cover"></div>
</div>

<div class="flex flex-wrap justify-center mb-5">
    <div class="w-full overflow-hidden xl:w-3/12 bg-white rounded-lg rounded-tl-none rounded-tr-none rounded-bl-none rounded-br-none bg-white" style="background-image: url('/images/bg_startup.jpg'); background-position: center"></div>
